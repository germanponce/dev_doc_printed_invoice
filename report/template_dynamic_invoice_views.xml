<odoo>
    <template id="report_print_account_invoice_template">
        <t t-call="web.basic_layout">
        <t t-set="total_page" t-value="0"/>
        <t t-foreach="get_lines(o)" t-as="p">
            <t t-set="total_page" t-value="total_page+1"/>
        </t>
        <t t-set="s_page" t-value="0"/>
        <t t-foreach="get_lines(o)" t-as="l">
            <t t-set="s_page" t-value="s_page+1"/>
            <div class="page" t-attf-style="color:#{o.formate_id.color};">
                <h1>
                    PRUEBA 
                    O:<span t-esc="o" />
                </h1>
                <div class="row">
                    <t t-if="o.formate_id.is_number">
                        <div t-attf-style="margin-left:#{o.formate_id.number_m_left}px;margin-top:#{o.formate_id.number_m_top}px;position: absolute;font-size:#{o.formate_id.num_font_size}px;">
                            <t t-if="o.formate_id.is_number_bold">
                                <t t-if="not o.name">
                                    <span style="font-weight:bold">Draft Invoice</span>
                                </t>
                                <span style="font-weight:bold" t-field="o.name"/>
                            </t>
                            <t t-if="not o.formate_id.is_number_bold">
                                <t t-if="not o.name">
                                    <span style="font-weight:bold">Draft Invoice</span>
                                </t>
                                <span t-field="o.name"/>
                            </t>

                        </div>
                    </t>
                    <t t-if="o.formate_id.is_partner">
                        <div t-attf-style="margin-left:#{o.formate_id.partner_m_left}px;margin-top:#{o.formate_id.partner_m_top}px;position: absolute;font-size:#{o.formate_id.partner_font_size}px">
                            <t t-if="o.formate_id.is_partner_bold">
                                <b>
                                    <span t-field="o.partner_id.name"/>
                                </b>
                            </t>
                            <t t-if="not o.formate_id.is_partner_bold">
                                <span t-field="o.partner_id.name"/>
                            </t>

                        </div>
                    </t>
                    <t t-if="o.formate_id.is_contact">
                        <div t-attf-style="margin-left:#{o.formate_id.contact_m_left}px;margin-top:#{o.formate_id.contact_m_top}px;position: absolute;font-size:#{o.formate_id.contact_font_size}px">
                            <t t-if="o.formate_id.is_contact_bold">
                                <b>
                                    <span t-esc="get_child(o.partner_id)"/>
                                </b>
                            </t>
                            <t t-if="not o.formate_id.is_contact_bold">
                                <span t-esc="get_child(o.partner_id)"/>
                            </t>

                        </div>
                    </t>

                    <t t-if="o.formate_id.is_address">
                        <div t-attf-style="margin-left:#{o.formate_id.address_m_left}px;margin-top:#{o.formate_id.address_m_top}px;position: absolute;font-size:#{o.formate_id.address_font_size}px">
                            <t t-if="o.formate_id.is_address_bold">
                                <b>
                                    <span t-esc="get_address(o.partner_id)"/>
                                </b>
                            </t>
                            <t t-if="not o.formate_id.is_address_bold">
                                <span t-esc="get_address(o.partner_id)"/>
                            </t>

                        </div>
                    </t>

                    <t t-if="o.formate_id.is_date and o.invoice_date">
                        <div t-attf-style="margin-left:#{o.formate_id.day_m_left}px;margin-top:#{o.formate_id.date_m_top}px;position: absolute;font-size:#{o.formate_id.date_font_size}px">
                            <t t-if="o.formate_id.is_date_bold">
                                <b>
                                    <span t-esc="time.strftime('%d',time.strptime(str(o.invoice_date),'%Y-%m-%d'))"/>
                                </b>
                            </t>
                            <t t-if="not o.formate_id.is_date_bold">
                                <span t-esc="time.strftime('%d',time.strptime(str(o.invoice_date),'%Y-%m-%d'))"/>
                            </t>

                        </div>
                        <div t-attf-style="margin-left:#{o.formate_id.month_m_left}px;margin-top:#{o.formate_id.date_m_top}px;position: absolute;font-size:#{o.formate_id.date_font_size}px">
                            <t t-if="o.formate_id.is_date_bold">
                                <b>
                                    <span t-esc="time.strftime('%b',time.strptime(str(o.invoice_date),'%Y-%m-%d'))"/>
                                </b>
                            </t>
                            <t t-if="not o.formate_id.is_date_bold">
                                <span t-esc="time.strftime('%b',time.strptime(str(o.invoice_date),'%Y-%m-%d'))"/>
                            </t>

                        </div>
                        <div t-attf-style="margin-left:#{o.formate_id.year_m_left}px;margin-top:#{o.formate_id.date_m_top}px;position: absolute;font-size:#{o.formate_id.date_font_size}px">
                            <t t-if="o.formate_id.is_date_bold">
                                <b>
                                    <span t-esc="time.strftime('%Y',time.strptime(str(o.invoice_date),'%Y-%m-%d'))"/>
                                </b>
                            </t>
                            <t t-if="not o.formate_id.is_date_bold">
                                <span t-esc="time.strftime('%Y',time.strptime(str(o.invoice_date),'%Y-%m-%d'))"/>
                            </t>

                        </div>
                    </t>


                    <t t-if="o.formate_id.is_phone">
                        <div t-attf-style="margin-left:#{o.formate_id.phone_m_left}px;margin-top:#{o.formate_id.phone_m_top}px;position: absolute;font-size:#{o.formate_id.phone_font_size}px">
                            <t t-if="o.formate_id.is_phone_bold">
                                <b>
                                    <span t-field="o.partner_id.phone"/>
                                </b>
                            </t>
                            <t t-if="not o.formate_id.is_phone_bold">
                                <span t-esc="o.partner_id.phone"/>
                            </t>

                        </div>
                    </t>


                    <t t-if="o.formate_id.is_line">
                        <table class="col-xs-12"
                               t-attf-style="margin-left:#{o.formate_id.line_m_left}px;margin-top:#{o.formate_id.line_m_top}px;position: absolute;font-size:#{o.formate_id.line_font_size}px;color:#{o.formate_id.color}px;">
                            <t t-foreach="l.get('values')" t-as="t">
                                <tr>
                                    <td t-attf-style="width:#{o.formate_id.code_width};padding:5px;" class="text-left">
                                        <span t-esc="t.get('code')"/>
                                    </td>

                                    <td t-attf-style="width:#{o.formate_id.qty_width};padding:5px;" class="text-center">
                                        <span t-esc="'%.2f'%(t.get('qty'))"/>
                                    </td>

                                    <td t-attf-style="width:#{o.formate_id.name_width};padding:5px;" class="text-left">
                                        <span t-esc="t.get('name')"/>
                                    </td>
                                    <td t-attf-style="width:#{o.formate_id.price_width};padding:5px;" class="text-right">
                                        <span t-esc="t.get('price')"
                                              t-esc-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                    <td t-attf-style="width:#{o.formate_id.discount_width};padding:5px;" class="text-right">
                                        <span t-esc="t.get('discount')"/>
                                              
                                    </td>
                                    <td t-attf-style="width:#{o.formate_id.total_width};padding:5px;" class="text-right">
                                        <span t-esc="t.get('total')"
                                              t-esc-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                            </t>
                        </table>
                    </t>

                    <t t-if="o.formate_id.is_untax">
                        <div t-attf-style="margin-left:#{o.formate_id.untax_m_left}px;margin-top:#{o.formate_id.untax_m_top}px;position: absolute;font-size:#{o.formate_id.untax_font_size}px">
                            <t t-if="o.formate_id.is_untax_bold">
                                <b>
                                    <span t-esc="o.amount_untaxed"
                                          t-esc-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                </b>
                            </t>
                            <t t-if="not o.formate_id.is_untax_bold">
                                <span t-esc="o.amount_untaxed"
                                      t-esc-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </t>

                        </div>
                    </t>

                    <t t-if="o.formate_id.is_tax">
                        <div t-attf-style="margin-left:#{o.formate_id.tax_m_left}px;margin-top:#{o.formate_id.tax_m_top}px;position: absolute;font-size:#{o.formate_id.tax_font_size}px">
                            <t t-if="o.formate_id.is_tax_bold">
                                <b>
                                    <span t-esc="o.amount_tax"
                                          t-esc-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                </b>
                            </t>
                            <t t-if="not o.formate_id.is_tax_bold">
                                <span t-esc="o.amount_tax"
                                      t-esc-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </t>

                        </div>
                    </t>

                    <t t-if="o.formate_id.is_total">
                        <div t-attf-style="margin-left:#{o.formate_id.total_m_left}px;margin-top:#{o.formate_id.total_m_top}px;position: absolute;font-size:#{o.formate_id.total_font_size}px">
                            <t t-if="o.formate_id.is_total_bold">
                                <b>
                                    <span t-esc="o.amount_total"
                                          t-esc-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                </b>
                            </t>
                            <t t-if="not o.formate_id.is_total_bold">
                                <span t-esc="o.amount_total"
                                      t-esc-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </t>

                        </div>
                    </t>
                    
                    <t t-if="o.formate_id.is_sales_man">
                        <div t-attf-style="margin-left:#{o.formate_id.sales_man_m_left};margin-top:#{o.formate_id.sales_man_m_top};position: absolute;font-size:#{o.formate_id.sales_man_font_size}">
                            <t t-if="o.formate_id.sales_man_bold">
                                <b>
                                    <span t-esc="o.user_id.name"/>
                                </b>
                            </t>
                            <t t-if="not o.formate_id.sales_man_bold">
                                <span t-esc="o.user_id.name" />
                                      
                            </t>

                        </div>
                    </t>
                    
                    <t t-if="o.formate_id.is_payment_term">
                        <div t-attf-style="margin-left:#{o.formate_id.payment_term_m_left};margin-top:#{o.formate_id.payment_term_m_top};position: absolute;font-size:#{o.formate_id.payment_term_font_size}">
                            <t t-if="o.formate_id.payment_term_font_bold">
                                <b>
                                    <span t-esc="o.invoice_payment_term_id.name"/>
                                </b>
                            </t>
                            <t t-if="not o.formate_id.payment_term_font_bold">
                                <span t-esc="o.invoice_payment_term_id.name" />
                                      
                            </t>

                        </div>
                    </t>
                    


                </div>
            </div>
        </t>
        </t>
    </template>


    <template id="report_account_invoice_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="dev_doc_printed_invoice.report_print_account_invoice_template" t-lang="o.partner_id.lang"/>

            </t>
        </t>
    </template>
</odoo>
